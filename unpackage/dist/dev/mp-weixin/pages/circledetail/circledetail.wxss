page {
  width: 100%;
  height: 100%;
}
page .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page .content .tag_title {
  width: 100%;
  padding-left: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
page .content .tag_title ._i {
  margin-right: 10rpx;
  color: #5098FF;
}
page .content .main {
  flex: 1;
  overflow: hidden;
  position: relative;
}
page .content .main .top_img_wrap {
  height: 280rpx;
}
page .content .main .info_wrap {
  -webkit-transform: translateY(-20rpx);
          transform: translateY(-20rpx);
}
page .content .main .info_wrap .top_box {
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
}
page .content .main .info_wrap .top_box .left_img {
  width: 240rpx;
  height: 100%;
  position: relative;
}
page .content .main .info_wrap .top_box .left_img .image {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  top: -120rpx;
  left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff;
}
page .content .main .info_wrap .top_box .right_info {
  width: calc(100% - 240rpx);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
page .content .main .info_wrap .top_box .right_info .base_info {
  font-size: 24rpx;
}
page .content .main .info_wrap .top_box .right_info .follow {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 15rpx;
  color: #FFFFFF;
  background-color: #5098FF;
}
page .content .main .info_wrap .desc_box {
  padding: 0 20rpx;
}
page .content .main .info_wrap .desc_box .title {
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  color: #5098FF;
}
page .content .main .info_wrap .desc_box .desc {
  padding-top: 10rpx;
  min-height: 90rpx;
  border-bottom: 1rpx solid rgba(207, 207, 207, 0.3);
}
page .content .main .info_wrap .desc_box .desc ._span {
  padding: 5rpx 12rpx;
  font-size: 24rpx;
  color: #bebebe;
  border-radius: 20rpx;
  margin-right: 10rpx;
  border: 1rpx solid rgba(207, 207, 207, 0.8);
}
page .content .main .info_wrap .circle_member {
  padding: 10rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid rgba(207, 207, 207, 0.3);
}
page .content .main .info_wrap .circle_member .title {
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
  color: #5098FF;
  margin-bottom: 5rpx;
}
page .content .main .info_wrap .circle_member .list {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
}
page .content .main .info_wrap .circle_member .list .item_wrap .item {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
  background-color: rgba(0, 0, 0, 0.1);
}
page .content .main .info_wrap .circle_member .list .item_wrap .item ._i {
  font-size: 52rpx;
  color: #5098FF;
}
page .content .main .info_wrap .circle_member .list .item_wrap .txt {
  width: 90rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出省略号 */
  white-space: nowrap;
}
page .content .main .info_wrap .circle_member .list .item_wrap .first {
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出省略号 */
  white-space: nowrap;
  color: #F0AD4E;
}

