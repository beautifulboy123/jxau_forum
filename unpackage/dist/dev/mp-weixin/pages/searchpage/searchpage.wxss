page {
  width: 100%;
  height: 100%;
}
page .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page .content .slot-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  /* 如果您想让slot内容占满整个导航栏的宽度 */
  /* flex: 1; */
  /* 如果您想让slot内容与导航栏左右有空隙 */
  padding: 0 30rpx;
}
page .content .slot-wrap .index_search {
  width: 100%;
}
page .content .main {
  flex: 1;
  overflow: hidden;
}
page .content .main .recommend .hot_title {
  width: 100%;
  padding: 20rpx 20rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
page .content .main .recommend .hot_title ._i {
  margin-left: 20rpx;
  color: red;
}
page .content .main .recommend .hot {
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
}
page .content .main .recommend .hot .recommend_item {
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出省略号 */
  white-space: nowrap;
  background-color: rgba(0, 0, 0, 0.1);
}
page .content .main .recommend .hot .listempty {
  width: 100%;
  height: 100%;
  text-align: center;
}
page .content .main .history_title {
  width: 100%;
  padding: 20rpx 20rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
page .content .main .history_title ._i {
  margin-right: 20rpx;
}
page .content .main .search_hestory {
  width: 100%;
  height: calc(100% - 377rpx);
}
page .content .main .search_hestory .search_scroll {
  height: 100%;
}
page .content .main .search_hestory .search_scroll .history_list .history {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(188, 188, 188, 0.4);
}
page .content .main .search_hestory .search_scroll .history_list .history .text {
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出省略号 */
  white-space: nowrap;
}
page .content .main .search_hestory .search_scroll .history_list .history .del {
  width: 20%;
  text-align: center;
}

