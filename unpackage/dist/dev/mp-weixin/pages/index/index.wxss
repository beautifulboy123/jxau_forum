page {
  width: 100%;
  height: 100%;
}
page .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page .content .slot-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  /* 如果您想让slot内容占满整个导航栏的宽度 */
  /* flex: 1; */
  /* 如果您想让slot内容与导航栏左右有空隙 */
  padding: 0 30rpx;
}
page .content .slot-wrap .index_search {
  width: 100%;
}
page .content .main {
  flex: 1;
  overflow: hidden;
  position: relative;
}
page .content .main .index_tabs {
  width: 100%;
  height: 80rpx;
  display: flex;
}
page .content .main .index_tabs .left_tabs {
  width: calc(100% - 80rpx);
  height: 100%;
}
page .content .main .index_tabs .right_menu {
  width: 80rpx;
  height: 100%;
  -webkit-transform: rotateZ(90deg);
          transform: rotateZ(90deg);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: rgba(0, 0, 0, 0.45) 0px 25rpx 20rpx -28rpx;
}
page .content .main .index_tabs .right_menu ._i {
  font-size: 42rpx;
  -webkit-transform: rotateZ(90deg);
          transform: rotateZ(90deg);
}
page .content .main .swiper {
  width: 100%;
  height: calc(100% - 80rpx);
}
page .content .main .upper {
  width: 100%;
  height: 50%;
  padding: 10rpx;
}
page .content .main .upper .tags_wrap {
  display: flex;
  flex-wrap: wrap;
}
page .content .main .upper .tags_wrap .tags {
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  font-size: 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}
page .content .main .upper .tags_wrap .tags:active {
  background-color: #FA3534;
  color: #fff;
}
page .content .main .upper .tags_wrap .tags:active ._i {
  color: #fff;
}
page .content .main .upper .tags_wrap .tags .txt {
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出省略号 */
  white-space: nowrap;
}
page .content .main .upper .tags_wrap .tags ._i {
  color: #FA3534;
  margin-left: 15rpx;
}
page .content .main .lower {
  width: 100%;
  height: 50%;
  padding: 10rpx;
}
page .content .main .lower .tags_wrap {
  display: flex;
  flex-wrap: wrap;
}
page .content .main .lower .tags_wrap .tags {
  padding: 10rpx 20rpx;
  display: flex;
