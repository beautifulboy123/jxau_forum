page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
page .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page .content .empty_box {
  transition: all 0.5s;
  overflow: hidden;
  background-color: #fff;
}
page .content .main {
  flex: 1;
  overflow: hidden;
  position: relative;
}
page .content .main .loadingWraper {
  width: 100%;
  height: 0rpx;
  opacity: 0;
  transition: all 0.5s;
  text-align: center;
  overflow: hidden;
}
page .content .main .isloading {
  height: 65rpx;
  padding: 10rpx;
  opacity: 1;
}
page .content .main .chat_scroll {
  background-color: #fff;
  transition: all 0.5s;
}
page .content .main .system_chat_wrap {
  padding: 20rpx;
  height: 300rpx;
}
page .content .main .system_chat_wrap .item {
  position: relative;
  height: 100%;
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: rgba(207, 207, 207, 0.2);
}
page .content .main .system_chat_wrap .item .time {
  text-align: center;
  height: 30%;
}
page .content .main .system_chat_wrap .item .time ._span {
  padding: 5rpx 12rpx;
  font-size: 24rpx;
  color: #bebebe;
  border-radius: 20rpx;
  margin-right: 10rpx;
  border: 1rpx solid rgba(207, 207, 207, 0.8);
}
page .content .main .system_chat_wrap .item .desc {
  height: 70%;
}
page .content .main .system_chat_wrap .item .arrow {
  position: absolute;
  right: 40rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
page .content .main .system_chat_wrap .item .arrow ._i {
  font-size: 36rpx;
}
page .content .main .chat_list {
  height: 100%;
}
page .content .main .chat_list .time {
  width: 100%;
  padding: 20rpx 0;
  padding-bottom: 0;
  text-align: center;
}
page .content .main .chat_list .time ._span {
  padding: 5rpx 12rpx;
  font-size: 24rpx;
  color: #bebebe;
  border-radius: 20rpx;
  margin-right: 10rpx;
  border: 1rpx solid rgba(207, 207, 207, 0.8);
}
page .content .main .chat_list .left_item {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
page .content .main .chat_list .left_item .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
page .content .main .chat_list .left_item .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
page .content .main .chat_list .left_item .message {
  max-width: calc(100% - 110rpx);
  min-height: 90rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  background-color: rgba(207, 207, 207, 0.2);
}
page .content .main .chat_list .right_item {
  justify-content: flex-end;
}
page .content .main .chat_list .right_item .avatar {
  margin-right: 0;
  margin-left: 20rpx;
}
page .content .input_wrap {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  min-height: 100rpx;
  box-sizing: border-box;
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.5s;
  border-top: 1rpx solid rgba(207, 207, 207, 0.2);
  background-color: #fff;
}
page .content .input_wrap .input_text {
  width: 600rpx;
  min-height: 70rpx;
  max-height: 168rpx;
  overflow-y: auto;
  border-radius: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
  transition: all 0.5s;
  background-color: rgba(207, 207, 207, 0.2);
}
page .content .input_wrap .send_btn {
  width: 90rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 15rpx;
  background-color: #5098FF;
  color: #fff;
}

