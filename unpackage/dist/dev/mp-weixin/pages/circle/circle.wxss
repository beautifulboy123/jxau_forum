page {
  width: 100%;
  height: 100%;
}
page .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page .content .slot-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  /* 如果您想让slot内容占满整个导航栏的宽度 */
  /* flex: 1; */
  /* 如果您想让slot内容与导航栏左右有空隙 */
  padding: 0 30rpx;
}
page .content .slot-wrap .index_search {
  width: 100%;
}
page .content .main {
  flex: 1;
  overflow: hidden;
  position: relative;
}
page .content .main .circle_scroll {
  width: 100%;
  height: 100%;
}
page .content .main .circle_top_recommend {
  height: 260rpx;
  display: flex;
  flex-wrap: wrap;
}
page .content .main .circle_top_recommend .left {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
}
page .content .main .circle_top_recommend .left .first {
  width: 45%;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
page .content .main .circle_top_recommend .left .first .mask {
  position: absolute;
  height: 35%;
  width: 100%;
  bottom: 0;
  font-weight: bold;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  color: #fff;
  background-color: rgba(0, 89, 255, 0.5);
}
page .content .main .circle_top_recommend .left .first .mask .inner_box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .content .main .circle_top_recommend .left .first .mask .inner_box .text {
  max-width: 80%;
  margin-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出省略号 */
  white-space: nowrap;
}
page .content .main .circle_top_recommend .left .item_wrap {
  width: 45%;
